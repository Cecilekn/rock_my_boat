<div class="container">
  <h1>Add your boat here!</h1>

  <%= simple_form_for(@boat) do |f| %>
  <%= f.input :name %>
  <%= f.input :capacity %>
  <%= f.input :location %>
  <%= f.input :theme, collection: Boat::THEMES %>
  <%= f.input :price_per_day %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add your boat" %>
  <% end %>
</div>
