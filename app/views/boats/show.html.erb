<div class="container">
  <h1><%= @boat.name %></h1>

  <%= cl_image_tag @boat.photo, height: 300, width: 400, crop: :fill %>
  <p>Capacity: <%= @boat.capacity %></p>
  <p>Price per day: <%= @boat.price_per_day %>â‚¬</p>
  <p>Owner: <%= @boat.user.first_name %></p>

  <% if @boat.reviews != nil %>
    <% @boat.reviews.each do |review| %>
      <p>Review: <%= review.content %></p>
    <% end %>
  <% end %>

  <%= link_to "Book this boat", new_boat_booking_path(@boat) %>

  <%= link_to "Back to List", boats_path %>
</div>

